<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog Platform</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar">
    <div class="container">
      <h1>My Blog</h1>
      <a href="/admin/login" class="btn-admin">Admin Login</a>
    </div>
  </nav>

  <div class="container">
    <div class="search-section">
      <form action="/" method="GET" class="search-form">
        <input type="text" name="search" placeholder="Search posts..." value="<%= search || '' %>">
        <button type="submit">Search</button>
      </form>
      
      <div class="categories">
        <a href="/" class="category-tag <%= !category ? 'active' : '' %>">All</a>
        <% categories.forEach(cat => { %>
          <a href="/?category=<%= cat %>" class="category-tag <%= category === cat ? 'active' : '' %>">
            <%= cat %>
          </a>
        <% }); %>
      </div>
    </div>

    <div class="posts-grid">
      <% if (posts.length === 0) { %>
        <p class="no-posts">No posts found. Check back later!</p>
      <% } else { %>
        <% posts.forEach(post => { %>
          <article class="post-card">
            <% if (post.image) { %>
              <img src="<%= post.image %>" alt="<%= post.title %>">
            <% } %>
            <div class="post-content">
              <span class="category-badge"><%= post.category %></span>
              <h2><a href="/post/<%= post.id %>"><%= post.title %></a></h2>
              <p><%= post.content.substring(0, 150) %>...</p>
              <div class="post-meta">
                <span><%= new Date(post.created_at).toLocaleDateString() %></span>
                <% if (post.tags && post.tags.length > 0) { %>
                  <div class="tags">
                    <% post.tags.forEach(tag => { %>
                      <span class="tag">#<%= tag %></span>
                    <% }); %>
                  </div>
                <% } %>
              </div>
            </div>
          </article>
        <% }); %>
      <% } %>
    </div>
  </div>
</body>
</html>
